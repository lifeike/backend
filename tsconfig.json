{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@shared": ["shared"]
    },
    "types": ["node", "chai", "mocha"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/test/**"]
}
